alias vi=nvim
alias viconf="nvim ~/.config/nvim/init.vim"
alias py=python2
alias ra=ranger-cd
alias pacu="sudo pacman -Syu"
alias paci="sudo pacman -S" 
alias aup="yaourt -Syu --aur"
alias aui="yaourt"
alias q=exit
alias xres="xrdb merge ~/.Xresources"
alias tekshot="screenfetch -o 'upload=1;uploadLoc=teknik;screenshot=1'"
alias c11="g++ -std=c++11"
alias lock="/home/jean/Scripts/lock.sh"
alias qnap="sudo mount 192.168.1.2:/Data /media/jean/qnap"
alias ergo="setxkbmap us;xset r rate 260 30;setxkbmap -option 'caps:ctrl_modifier' && xcape -e 'Caps_Lock=Escape' & "
